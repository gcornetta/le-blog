---
// Destructure props with safe defaults
const { title = 'Login', description = 'Login to your account.' } = Astro.props;
import Header from '../components/content/Header.astro';  
import Footer from '../components/content/Footer.astro'; 
import BackToHome from '../components/ui/BackToHome.astro'; 
import '../styles/global.css';
---

<html lang="en" class="scroll-smooth" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <!-- 
    The body class centers the content both horizontally and vertically.
    This is ideal for a login form.
  -->
  <body class="min-h-screen flex flex-col bg-base-100 text-base-content">  
    <Header/>
    <!-- The slot will contain the login form component -->
    <slot />
    <BackToHome/>
    <Footer/>
  </body>
</html>




