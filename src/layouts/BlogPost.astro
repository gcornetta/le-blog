---
// src/layouts/BlogPost.astro
const { frontmatter = { title: 'Untitled', description: '', pubDate: new Date(), tags: [] } } = Astro.props;
import Header from '../components/content/Header.astro';
import Footer from '../components/content/Footer.astro';

import '../styles/global.css'; 
---
<html lang="en" class="scroll-smooth">
  <head>
    <title>{frontmatter.title} | AstroSpace</title>
    <meta name="description" content={frontmatter.description} />
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 text-base-content">
    <Header />
    
    <main class="flex-grow container mx-auto px-4 py-8">
      <article class="prose dark:prose-invert max-w-none">
        <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
        <div class="flex items-center gap-4 mb-8">
          <span class="text-sm opacity-75">{new Date(frontmatter.pubDate).toLocaleDateString()}</span>
          <div class="flex gap-2">
            {frontmatter.tags.map(tag => (
              <span class="badge badge-outline">{tag}</span>
            ))}
          </div>
        </div>
        <slot />
      </article>
    </main>
    
    <Footer />
  </body>
</html>
