<!-- src/components/ui/UpButton.astro -->
<div 
  x-data="{ show: false }"
  x-init="window.addEventListener('scroll', () => show = window.scrollY > 300)"
  x-show="show"
  x-transition.opacity
  class="fixed bottom-6 right-6 z-50"
>
  <button
    @click="window.scrollTo({ top: 0, behavior: 'smooth' })"
    class="btn btn-primary btn-circle shadow-lg shadow-black/40 border border-black/20 ring-2 ring-black/10 hover:ring-black/20 transition duration-300 ease-in-out"
    aria-label="Scroll to top"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
    </svg>
  </button>
</div>

<script is:inline>
  document.addEventListener('alpine:init', () => {
    Alpine.store('scrollButton', {
      show: false
    });
  });
</script>
