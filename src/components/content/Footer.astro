---
// src/components/content/Footer.astro
import Alert from '../ui/Alert.astro';

const year = new Date().getFullYear();
---

<footer class="bg-gradient-to-br from-base-200 to-base-300 dark:from-base-800 dark:to-base-900 mt-12 relative">
  <div class="container mx-auto px-4 py-8">
    <!-- Global alert floating at bottom of screen -->
    <Alert />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold mb-4">About Learn<span
                class="inline-block mr-[0.1rem] ml-[0.1rem] text-red-500"
                style="transform: rotate(-15deg);"
            >e</span>lectronics</h3>
        <p class="text-sm">
          Sharing educational resources and teaching insights to help students and educators
          in the digital age.
        </p>
      </div>

      <!-- Quick Links and Social Links side by side -->
      <div>
        <div class="flex flex-col sm:flex-row sm:space-x-12">
          <!-- Quick Links -->
          <div class="mb-6 sm:mb-0">
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/blog" class="hover:text-primary">Blog</a></li>
              <li><a href="/courses" class="hover:text-primary">Courses</a></li>
              <li><a href="/privacy" class="hover:text-primary">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-primary">Terms of Service</a></li>
            </ul>
          </div>

          <!-- Social Links -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Follow Me</h3>
            <div class="flex space-x-4 items-center">
              <!-- YouTube -->
              <a href="https://www.youtube.com/@yourchannel"
                 class="hover:text-red-500 transition-transform transform hover:scale-110"
                 target="_blank" rel="noopener noreferrer" aria-label="YouTube">
                <svg class="w-7 h-7 fill-current" viewBox="0 0 576 512" xmlns="http://www.w3.org/2000/svg">
                  <path d="M549.7 124.1c-6.3-23.7-24.9-42.3-48.6-48.6C456.5 64 288 64 288 64s-168.5 0-213.1 11.5c-23.7 6.3-42.3 24.9-48.6 48.6C16 168.7 16 256 16 256s0 87.3 10.3 131.9c6.3 23.7 24.9 42.3 48.6 48.6C119.5 448 288 448 288 448s168.5 0 213.1-11.5c23.7-6.3 42.3-24.9 48.6-48.6 10.3-44.6 10.3-131.9 10.3-131.9s0-87.3-10.3-131.9zM232 336V176l142 80-142 80z"/>
                </svg>
              </a>
              <!-- GitHub -->
              <a href="https://github.com/yourusername"
                 class="hover:text-gray-700 transition-transform transform hover:scale-110"
                 target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                <svg class="w-7 h-7 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd"
                    d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 
                    3.438 9.8 8.205 11.387.6.113.82-.258.82-.577 
                    0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.757-1.333-1.757-1.087-.744.084-.729.084-.729 
                    1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.807 1.305 3.495.997.108-.776.418-1.305.762-1.605-2.665-.3-5.467-1.332-5.467-5.93 
                    0-1.31.47-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 
                    0 0 1.005-.322 3.3 1.23a11.52 11.52 0 013.003-.404 
                    11.52 11.52 0 013.003.404c2.28-1.552 3.285-1.23 3.285-1.23 
                    .645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 
                    0 4.61-2.807 5.625-5.48 5.92.429.372.81 1.102.81 2.222 
                    0 1.606-.015 2.896-.015 3.293 0 .315.21.694.825.576C20.565 
                    22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Newsletter Section (stretched) -->
      <div class="h-full flex flex-col justify-between">
        <div>
          <h3 class="text-lg font-semibold mb-4">Newsletter</h3>
          <form 
            class="space-y-2" 
            x-data="{ email: '' }"
            @submit.prevent="
              window.dispatchEvent(new CustomEvent('alert-show', { detail: 'Thanks for subscribing!' }));
              email = '';
            "
          >
            <input 
              type="email" 
              x-model="email"
              placeholder="Your email" 
              class="input input-bordered w-full" 
              required
            />
            <button type="submit" class="btn btn-primary w-full">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="border-t border-base-300 mt-8 pt-6 text-center text-sm">
      <p>Â© {year} Gianluca Cornetta. All rights reserved.</p>
    </div>
  </div>
</footer>
