---
// Footer component with newsletter and alert dispatch
import Alert from '../ui/Alert.astro';

const year = new Date().getFullYear();
---

<footer class="bg-gradient-to-br from-base-200 to-base-300 dark:from-base-800 dark:to-base-900 mt-12 relative">
  <div class="container mx-auto px-4 py-8">
    <!-- Global alert floating at bottom of screen -->
    <Alert />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold mb-4">About LearnElectronics</h3>
        <p class="text-sm">
          Sharing educational resources and teaching insights to help educators
          in the digital age.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/blog" class="hover:text-primary">Blog</a></li>
          <li><a href="/courses" class="hover:text-primary">Courses</a></li>
          <li><a href="/privacy" class="hover:text-primary">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-primary">Terms of Service</a></li>
        </ul>
      </div>
      
      <!-- Newsletter -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Newsletter</h3>
        <form 
          class="space-y-2" 
          x-data="{ email: '' }"
          @submit.prevent="
            window.dispatchEvent(new CustomEvent('alert-show', { detail: 'Thanks for subscribing!' }));
            email = '';
          "
        >
          <input 
            type="email" 
            x-model="email"
            placeholder="Your email" 
            class="input input-bordered w-full" 
            required
          />
          <button type="submit" class="btn btn-primary w-full">
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <div class="border-t border-base-300 mt-8 pt-6 text-center text-sm">
      <p>Â© {year} Gianluca Cornetta. All rights reserved.</p>
    </div>
  </div>
</footer>
