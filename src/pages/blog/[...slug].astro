---
// src/pages/blog/[...slug].astro 
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro'; 
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    // The key here is to pass the post.slug AS IS.
    // Astro's [...slug] will correctly interpret it as a full path.
    params: { slug: post.slug }, 
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, updatedDate, heroImage, tags, author } = post.data;

// Astro.params.slug will now be the full string (e.g., 'posts/getting_started')
// So we can use it directly for the canonical URL or any other path construction.
const fullSlug = Astro.params.slug; 
---

<BaseLayout 
  title={`${title} | My Blog`} 
  description={description || title}
  canonical={`/blog/${fullSlug}`}
>
  <article class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-8">
      {heroImage && (
        <div class="rounded-lg overflow-hidden mb-6">
          <Image
            src={heroImage}
            alt={title}
            width={1200}
            height={630}
            class="w-full h-auto object-cover"
            loading="eager"
          />
        </div>
      )}
      
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
          <span class="badge badge-primary">{tag}</span>
        ))}
      </div>
      
      <h1 class="text-4xl font-bold mb-2">{title}</h1>
      
      <div class="flex items-center gap-4 text-sm opacity-80">
        <span>By {author}</span>
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {updatedDate && (
          <span class="text-xs">
            (Updated: {updatedDate.toLocaleDateString()})
          </span>
        )}
      </div>
    </header>

    <div class="prose lg:prose-xl dark:prose-invert mx-auto">
      <Content />
    </div>

    <footer class="mt-12 pt-6 border-t border-base-300">
      <a href="/blog" class="btn btn-ghost">
        ‚Üê Back to Blog
      </a>
    </footer>
  </article>
</BaseLayout>